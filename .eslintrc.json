{
  "root": true,
  "ignorePatterns": ["!**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {
        "overrides": [
          {
            "files": ["./ethereum-backend/**/*.spec.js"],
            "rules": {
                "no-unused-expressions": "off"
            }
          }
        ]
      
      }
    }
  ],
  "extends": ["plugin:@nx/react"]
}
